<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="ConversorCelsiusParaFahrenheitController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
    <VBox spacing="10">
        <Label text="Conversor de Celsius para Fahrenheit" style="-fx-font-size: 16pt; -fx-font-weight: bold;" />
        <Label text="Digite a temperatura em Celsius:" />
        <TextField fx:id="textFieldCelsius" />
        <Button text="Converter" onAction="#converterCelsiusParaFahrenheit" />
        <Label text="Resultado em Fahrenheit:" />
        <TextField fx:id="textFieldFahrenheit" editable="false" />
    </VBox>
</GridPane>
